<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/pbs_shareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/share_to"
        android:textColor="@color/black_a"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pbs_shareToRev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/pbs_shareTitle" />

    <View
        android:id="@+id/pbs_shareCancelLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray_a"
        app:layout_constraintTop_toBottomOf="@id/pbs_shareToRev" />

    <Button
        android:id="@+id/pbs_shareCancelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/line_gray_b"
        android:text="@string/cancel"
        android:textColor="@color/deep_gray"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/pbs_shareCancelLine" />
</android.support.constraint.ConstraintLayout>